#!/bin/zsh

cd ${0:h}/..

summary() {
    local files=(os.txt shell.txt term.txt user.txt)
    local all=$(cat data/$files[1] | wc -l)

    for file ($files) {
        local -A tmp_map
        local -a tmp_array

        while {read line} {
            local name=${line#*@}
            
            (($+tmp_map[$name])) || tmp_map[$name]=0

            ((tmp_map[$name]++))
        } < data/$file

        for k v (${(kv)tmp_map}) {
            tmp_array+=($v@$k)
        }

        local count=0
        for i (${(On)tmp_array}) {
            local number=${i%@*}
            local item=${i#*@}

            echo "$item <br> $number / $all <br> $(printf '%.3f' $((100.0 * number / all)))%"

            if ((++count >= 100)) {
                break
            }
        } > $file

        unset tmp_map tmp_array
    }

    paste -d '@' $files
    rm $files
}

local before='''<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <title>asciinema statistics</title>
  </head>
  <body lang="en" style="background-color:#000000;">
    <h1 align="center" style="color:#FFFFFF;">asciinema statistics</h1>
    <h6 align="center" style="color:#DDDDDD;">
      (data from <a href="https://asciinema.org/explore/public">asciinema</a>, %s)</a>
    </h6>

    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">OS</th>
          <th scope="col">SHELL</th>
          <th scope="col">TERM</th>
          <th scope="col">USER</th>
        </tr>
      </thead>
      <tbody>'''

local after='''
      </tbody>
    </table>

  </body>
</html>'''

local template='''
        <tr>
          <th scope="row">%s</th>
          <td>%s</td>
          <td>%s</td>
          <td>%s</td>
          <td>%s</td>
        </tr>
'''

printf $before "$(date -u +'%Y-%m-%d %H:%M:%S') UTC" > index.html

local index=0
summary | while {read line} {
    printf $template $((++index)) "${(@s/@/)line}" >> index.html
}

echo $after >> index.html
